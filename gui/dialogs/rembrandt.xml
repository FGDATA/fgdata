			</enable>
			<property>/sim/rendering/shadows/map-size</property>
			<value>1024</value>
			<value>2048</value>
			<value>4096</value>
			<value>8192</value>
			<binding>
				<command>dialog-apply</command>
				<object-name>shadow-map-size</object-name>
			</binding>
		</combo>
		
	</group>

	<group>
