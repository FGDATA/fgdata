<?xml version="1.0"?>

<PropertyList>

	<path>moffett-hangar-ng.ac</path>

	<animation>
		<type>select</type>
		<object-name>lights-2</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.57</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>select</type>
