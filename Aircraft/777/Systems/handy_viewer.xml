<group>
  <layout>hbox</layout>
  <text>
     <label>Handy Viewer</label>
  </text>
  <empty><stretch>true</stretch></empty>

  <button>
      <legend/>
      <key>Esc</key>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

 </group>

