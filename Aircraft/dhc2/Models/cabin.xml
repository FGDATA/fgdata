    <animation>
        <type>rotate</type>
        <object-name>PropPitch</object-name>
        <object-name>PropPitch.001</object-name>
        <property>controls/engines/engine/propeller-pitch</property>
        <factor>70</factor>
        <center>
            <x-m>-1.342</x-m>
            <y-m>0.003</y-m>
            <z-m>0.405</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Mixture</object-name>
        <object-name>Mixture.001</object-name>
        <property>controls/engines/engine/mixture</property>
        <factor>70</factor>
        <center>
            <x-m>-1.342</x-m>
            <y-m>0.003</y-m>
            <z-m>0.405</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Throttle</object-name>
        <object-name>Throttle.001</object-name>
        <property>controls/engines/engine/throttle</property>
        <factor>70</factor>
        <center>
            <x-m>-1.342</x-m>
            <y-m>0.003</y-m>
            <z-m>0.405</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FLAPneedle</object-name>
        <property>surface-positions/flap-pos-norm</property>
        <factor>0.0610</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

<!-- OSG hotspots-->
<!-- Switches -->

    <animation>
        <type>pick</type>
        <object-name>BattSwitch</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>controls/electric/battery-switch</property>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>sim/sound/switch</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>StarterSwitch</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
	<binding>
		<command>nasal</command>
		<script>controls.startEngine(1)</script>
	</binding>
	<mod-up>
		<binding>
		<command>nasal</command>
		<script>controls.startEngine(0)</script>
		</binding>
		</mod-up>
        </action>
    </animation>

