<?xml version="1.0"?>

<PropertyList>

<path>cabin.ac</path>

    <animation>
        <type>material</type>
        <object-name>LHFdoor.inner</object-name>
        <object-name>RHFdoor.inner</object-name>
        <object-name>Reardoor.inner</object-name>
        <object-name>Cabin</object-name>
        <object-name>Yoke</object-name>
        <object-name>Yoke1</object-name>
        <object-name>Yoke2</object-name>
        <object-name>Seats</object-name>
        <object-name>Panel</object-name>
        <object-name>BattSwitch</object-name>
        <object-name>StarterSwitch</object-name>
        <object-name>AltSwitch</object-name>
        <object-name>PumpSwitch</object-name>
        <object-name>PitotSwitch</object-name>
        <object-name>Instr-Switch</object-name>
        <object-name>L_lightSwitch</object-name>
        <object-name>N_lightSwitch</object-name>
        <property-base>sim/model/cabin</property-base>
        <texture-prop>texture</texture-prop>
        <texture>cabin.png</texture>
    </animation>

    <model>
        <name>panel1</name>
        <path>Aircraft/dhc2/Models/panel1.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <pitch-deg>0</pitch-deg>
        </offsets>
    </model>

    <model>
        <name>Pilot</name>
        <path>Models/Aircraft/testpilot.xml</path>
        <offsets>
            <x-m>-0.747</x-m>
            <y-m>-0.291</y-m>
            <z-m>-0.05</z-m>
            <pitch-deg>0</pitch-deg>
        </offsets>
    </model>

    <animation>
        <type>select</type>
        <object-name>Yoke</object-name> 
        <object-name>Yoke1</object-name>
        <object-name>Yoke2</object-name>
        <condition>
            <property>sim/yokes-visible</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Cargo</object-name>
        <condition>
            <greater-than>
                <property>yasim/cargo</property>
                <value>500.000</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>RHpedal</object-name>
        <property>controls/flight/rudder</property>
        <factor>0.025</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>LHpedal</object-name>
        <property>controls/flight/rudder</property>
        <factor>0.025</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Yoke</object-name>
        <object-name>Yoke1</object-name>
        <object-name>Yoke2</object-name>
        <property>controls/flight/elevator</property>
        <factor>5.0</factor>
        <center>
            <x-m>-1.122</x-m>
            <y-m>0</y-m>
            <z-m>-0.448</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Yoke1</object-name>
        <property>controls/flight/aileron</property>
        <factor>40.0</factor>
        <center>
            <x-m>-1.102</x-m>
            <y-m>-0.351</y-m>
            <z-m>0.194</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Yoke2</object-name>
        <property>controls/flight/aileron</property>
        <factor>40.0</factor>
        <center>
            <x-m>-1.141</x-m>
            <y-m>0.327</y-m>
            <z-m>0.195</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

<!--    INSTRUMENTS    -->

    <animation>
        <type>rotate</type>
        <object-name>cmpsrose</object-name>
        <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
        <axis>
            <x>0.0</x>
            <y>0.0</y>
            <z>1.0</z>
        </axis>
        <center>
            <x-m>-1.264</x-m>
            <y-m>0.001</y-m>
            <z-m>0.694</z-m>
        </center>
    </animation>

    <animation>
    <type>select</type>
    <object-name>stall-on</object-name>
    <condition>
        <less-than>
            <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
            <value>55.000</value>
        </less-than>
        <not>
            <property>gear/gear/wow</property>
        </not>
        </condition>
    </animation>

<!--    Controls    -->

