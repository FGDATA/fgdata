    <animation>
        <type>pick</type>
        <object-name>KY196A.knob1</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/comm/frequencies/standby-mhz</property>
                <step>0.025</step>
                <min>118.000</min>
                <max>136.000</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

