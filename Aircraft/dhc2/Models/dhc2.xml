<?xml version="1.0"?>

<PropertyList>

<path>dhc2.ac</path>

    <nasal>
        <load>
        var livery_update = aircraft.livery_update.new("Aircraft/dhc2/Models/Liveries", 10);
        var self = cmdarg();
        var aero = self.getNode("sim/aero", 1);
        aero.alias(self.getNode("sim/multiplay/generic/string", 1));
        </load>

        <unload>
            livery_update.stop();
        aero.unalias();
        </unload>
    </nasal>

    <!-- Mark transparent surfaces for Rembrandt -->
