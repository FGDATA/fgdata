    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Altimatic.DeltaPitchNeedle</object-name>
        <property>autopilot/CENTURYIII/settings/delta-pitch</property>
        <factor>-1</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>-0.007029</y-m>
            <z-m>-0.009073</z-m>
        </center>
    </animation>

</PropertyList>
