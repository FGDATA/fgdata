<PropertyList>

  <transponder>
    <name>transponder</name>
    <number>0</number>
    <mode-c-altitude>/instrumentation/altimeter[0]/mode-c-alt-ft</mode-c-altitude>
  </transponder>

  <airspeed-indicator>
    <name>airspeed-indicator</name>
    <number>0</number>
    <total-pressure>systems/pitot[0]/total-pressure-inhg</total-pressure>
    <static-pressure>systems/static[0]/pressure-inhg</static-pressure>
  </airspeed-indicator>

  <airspeed-indicator>
    <name>airspeed-indicator</name>
    <number>1</number>
    <total-pressure>systems/pitot[0]/total-pressure-inhg</total-pressure>
    <static-pressure>systems/static[0]/pressure-inhg</static-pressure>
  </airspeed-indicator>

  <altimeter>
    <name>altimeter</name>
    <number>0</number>
    <static-pressure>systems/static[0]/pressure-inhg</static-pressure>
  </altimeter>

  <altimeter>
    <name>altimeter</name>
    <number>1</number>
    <static-pressure>systems/static[0]/pressure-inhg</static-pressure>
  </altimeter>

  <vertical-speed-indicator>
    <name>vertical-speed-indicator</name>
    <number>0</number>
    <static-pressure>systems/static[0]/pressure-inhg</static-pressure>
  </vertical-speed-indicator>

  <attitude-indicator>
    <name>attitude-indicator</name>
    <number>0</number>
    <suction>instrumentation/vacuum/suction-inhg</suction>
  </attitude-indicator>

  <attitude-indicator>
    <name>attitude-indicator</name>
    <number>1</number>
    <suction>instrumentation/attitude-indicator[1]/fake-suction</suction>
  </attitude-indicator>

<!--
  <heading-indicator>
    <name>heading-indicator</name>
    <number>0</number>
    <suction>systems/vacuum[0]/suction-inhg</suction>
  </heading-indicator>
-->

  <slip-skid-ball>
    <name>slip-skid-ball</name>
    <number>0</number>
  </slip-skid-ball>

  <turn-indicator>
    <name>turn-indicator</name>
    <number>0</number>
  </turn-indicator>

  <slip-skid-ball>
    <name>slip-skid-ball</name>
    <number>1</number>
  </slip-skid-ball>

  <turn-indicator>
    <name>turn-indicator</name>
    <number>1</number>
  </turn-indicator>

  <clock>
    <name>clock</name>
    <number>0</number>
  </clock>

  <dme>
    <name>dme</name>
    <number>0</number>
  </dme>

  <adf>
    <name>adf</name>
    <number>0</number>
  </adf>

  <comm-radio>
    <name>comm</name>
    <number>0</number>
  </comm-radio>

  <comm-radio>
    <name>comm</name>
    <number>1</number>
  </comm-radio>

  <nav-radio>
    <name>nav</name>
    <number>0</number>
  </nav-radio>

  <nav-radio>
    <name>nav</name>
    <number>1</number>
  </nav-radio>

  <magnetic-compass>
    <name>magnetic-compass</name>
    <number>0</number>
    <!-- use either deviation property or deviation table for compass deviation -->
    <!--deviation>/instrumentation/magnetic-compass/deviation-deg</deviation-->
    <deviation>
      <table>
          <entry>
            <ind>0</ind>
            <dep>1</dep>
          </entry>
          <entry>
            <ind>30</ind>
            <dep>1</dep>
          </entry>
          <entry>
            <ind>60</ind>
            <dep>3</dep>
          </entry>
          <entry>
            <ind>90</ind>
            <dep>-1</dep>
          </entry>
          <entry>
            <ind>120</ind>
            <dep>3</dep>
          </entry>
          <entry>
            <ind>150</ind>
            <dep>-1</dep>
          </entry>
          <entry>
            <ind>180</ind>
            <dep>0</dep>
          </entry>
          <entry>
            <ind>210</ind>
            <dep>1</dep>
          </entry>
          <entry>
            <ind>240</ind>
            <dep>3</dep>
          </entry>
          <entry>
            <ind>270</ind>
            <dep>4</dep>
          </entry>
          <entry>
            <ind>300</ind>
            <dep>3</dep>
          </entry>
          <entry>
            <ind>330</ind>
            <dep>1</dep>
          </entry>
      </table>
    </deviation>
  </magnetic-compass>

  <marker-beacon>
    <name>marker-beacon</name>
    <number>0</number>
  </marker-beacon>

</PropertyList>
