<PropertyList>
  <name>Approach Check</name>
  <description>This is the approach checklist. When approaching the destination, probably after the initial approach fix, use a spare second to check these items.</description>
  <interval>0</interval>

  <init>
    <set>
      <property>/sim/current-view/view-number</property>
      <value>0</value>
    </set>
  </init>

  <step>
    <message>
      WEATHER: copied
    </message>
  </step>

  <step>
    <message>
      ALTIMETER: set
    </message>
  </step>

  <step>
    <message>
      FUEL SELECTOR: on
    </message>
  </step>

  <step>
    <message>
      GYRO: checked
    </message>
  </step>

</PropertyList>
