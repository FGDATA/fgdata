<PropertyList>
  <name>Cruise Check</name>
  <description>This is the cruise checklist. To be used when cruise altitude is reached after takeoff and after each level change.</description>
  <interval>0</interval>

  <init>
    <set>
      <property>/sim/current-view/view-number</property>
      <value>0</value>
    </set>
  </init>

  <step>
    <message>
      CRUISE POWER: set
    </message>
  </step>

  <step>
    <message>
      MIXTURE: set
    </message>
  </step>

  <step>
    <message>
      COWL FLAPS: close
    </message>
  </step>

</PropertyList>
