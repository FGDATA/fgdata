<PropertyList>

    <path>kra10a.ac</path>

    <animation>
        <type>noshadow</type>
        <object-name>kra10</object-name>
    </animation>
    
    <animation>
        <type>material</type>
        <object-name>kra10.face</object-name>
        <emission>
            <red-prop>/sim/model/instrument-lighting/emission/red</red-prop>
            <green-prop>/sim/model/instrument-lighting/emission/green</green-prop>
            <blue-prop>/sim/model/instrument-lighting/emission/blue</blue-prop>
            <factor-prop>/controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>kra10.needle</object-name>
        <property>/position/altitude-agl-ft</property>
        <interpolation>
            <entry>
                <ind> 0</ind>
                <dep>90.0</dep>
            </entry>
            <entry>
                <ind> 20</ind>
                <dep>90.0</dep>
            </entry>
            <entry>
                <ind> 30</ind>
                <dep>350.0</dep>
            </entry>
            <entry>
                <ind> 50</ind>
                <dep>344.0</dep>
            </entry>
            <entry>
                <ind> 100</ind>
                <dep>330.0</dep>
            </entry>
            <entry>
                <ind> 200</ind>
                <dep>298.0</dep>
            </entry>
            <entry>
                <ind> 300</ind>
                <dep>267.0</dep>
            </entry>
            <entry>
                <ind> 400</ind>
                <dep>233.0</dep>
            </entry>
            <entry>
                <ind> 500</ind>
                <dep>200.0</dep>
            </entry>
            <entry>
                <ind>1000</ind>
                <dep>180.0</dep>
            </entry>
            <entry>
                <ind>1500</ind>
                <dep>160.0</dep>
            </entry>
            <entry>
                <ind>2000</ind>
                <dep>140.0</dep>
            </entry>
            <entry>
                <ind>2500</ind>
                <dep>120.0</dep>
            </entry>
            <entry>
                <ind>2700</ind>
                <dep>90.0</dep>
            </entry>
        </interpolation>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>

    </animation>

    <animation>
        <type>rotate</type>
        <object-name>kra10.Bug</object-name>
        <property>/instrumentation/radar-altimeter/decision-height</property>
        <interpolation>
            <entry>
                <ind> 0</ind>
                <dep>359.0</dep>
            </entry>
            <entry>
                <ind> 50</ind>
                <dep>344.0</dep>
            </entry>
            <entry>
                <ind> 100</ind>
                <dep>330.0</dep>
            </entry>
            <entry>
                <ind> 200</ind>
                <dep>298.0</dep>
            </entry>
            <entry>
                <ind> 300</ind>
                <dep>267.0</dep>
            </entry>
            <entry>
                <ind> 400</ind>
                <dep>233.0</dep>
            </entry>
            <entry>
                <ind> 500</ind>
                <dep>200.0</dep>
            </entry>
            <entry>
                <ind>1000</ind>
                <dep>180.0</dep>
            </entry>
            <entry>
                <ind>1500</ind>
                <dep>160.0</dep>
            </entry>
            <entry>
                <ind>2000</ind>
                <dep>140.0</dep>
            </entry>
            <entry>
                <ind>2500</ind>
                <dep>120.0</dep>
            </entry>
        </interpolation>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <!-- DH light -->
    <animation>
        <type>material</type>
        <object-name>kra10.DH</object-name>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </emission>
        <condition>
          <less-than>
            <property>/position/altitude-agl-ft</property>
            <property>/instrumentation/radar-altimeter/decision-height</property>
          </less-than>
        </condition>
    </animation>

</PropertyList>
