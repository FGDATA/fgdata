<PropertyList>
  <path>GearIndicator.ac</path>

  <animation>
    <type>noshadow</type>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Nose</object-name>
    <condition>
      <property>gear/gear[0]/indicator-serviceable</property>
      <greater-than>
        <property>gear/gear[0]/position-norm</property>
        <value>0.9</value>
      </greater-than>
      <greater-than>
        <property>/systems/electrical/battery-bus/u-volts</property>
        <value type="double">8.0</value>
      </greater-than>
      <not>
        <property>controls/electric/circuitbreaker/cb_0_6</property>
      </not>
    </condition>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Left</object-name>
    <condition>
      <property>gear/gear[1]/indicator-serviceable</property>
      <greater-than>
        <property>gear/gear[1]/position-norm</property>
        <value>0.9</value>
      </greater-than>
      <greater-than>
        <property>/systems/electrical/battery-bus/u-volts</property>
        <value type="double">8.0</value>
      </greater-than>
      <not>
        <property>controls/electric/circuitbreaker/cb_0_6</property>
      </not>
    </condition>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Right</object-name>
    <condition>
      <property>gear/gear[2]/indicator-serviceable</property>
      <greater-than>
        <property>gear/gear[2]/position-norm</property>
        <value>0.9</value>
      </greater-than>
      <greater-than>
        <property>/systems/electrical/battery-bus/u-volts</property>
        <value type="double">8.0</value>
      </greater-than>
      <not>
        <property>controls/electric/circuitbreaker/cb_0_6</property>
      </not>
    </condition>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>
</PropertyList>
