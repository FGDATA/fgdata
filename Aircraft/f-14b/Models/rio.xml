<?xml version="1.0"?>


<PropertyList>

	<path>rio.ac</path>

	<animation>
		<type>select</type>
		<object-name>RIO</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/current-view/name</property>
					<value>RIO View</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Back-seat View</value>
				</equals>
			</not>
		</condition>
	</animation>

	<animation>
		<type>material</type>
		<object-name>patch</object-name>
		<object-name>helmet</object-name>
		<property-base>sim/model/livery-patch</property-base>
		<texture-prop>texture</texture-prop>
		<texture>patch.checkmates.png</texture>
	</animation>
	
	<animation>
		<type>range</type>
		<min-m>3</min-m>
		<max-m>150</max-m>
	</animation>

</PropertyList>
