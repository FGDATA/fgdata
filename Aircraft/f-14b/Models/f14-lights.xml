<?xml version="1.0"?>


<PropertyList>

	<path>f14-lights.ac</path>
	<nopreview/>

	<animation>
		<type>select</type>
		<condition>
            <property>sim/rendering/rembrandt/enabled</property>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
        </condition>
		<object-name>lgt-pilot-console-R</object-name>
		<object-name>lgt-pilot-front-up-C</object-name>
		<object-name>lgt-pilot-front-knee-L</object-name>
		<object-name>lgt-pilot-front-L</object-name>
		<object-name>lgt-pilot-front-C</object-name>
		<object-name>lgt-rio</object-name>
		<object-name>lgt-pilot-front-R</object-name>
		<object-name>lgt-pilot-front-knee-R</object-name>
		<object-name>lgt-pilot-console-L</object-name>
	</animation>

	<animation>
		<type>select</type>
		<object-name>cockpit-lights</object-name>
		<condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
			<or>
				<equals>
					<property>sim/current-view/name</property>
					<value>RIO View</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Back-seat View</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Cockpit View</value>
				</equals>
			</or>
		</condition>
	</animation>

	<!-- Pilot's controle panel -->
