<?xml version="1.0"?>

<!--Simple Tactical Display (ECM) -->

<PropertyList>

	<path>hsd-ecm.ac</path>

	<animation>
		<type>select</type>
		<object-name>tid</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
			<equals>
				<property>sim/model/f-14b/controls/pilots-displays/hsd-mode-nav</property>
				<value>-1</value>
			</equals>
			<property>sim/model/f-14b/controls/HSD/on-off</property>
               <greater-than>
                  <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                  <value>0</value>
                </greater-than>
		</condition>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>ecm-bkg</object-name>
		<object-name>MP13-scan</object-name>
		<object-name>MP12-scan</object-name>
		<object-name>MP11-scan</object-name>
		<object-name>MP10-scan</object-name>
		<object-name>MP9-scan</object-name>
		<object-name>MP8-scan</object-name>
		<object-name>MP7-scan</object-name>
		<object-name>MP6-scan</object-name>
		<object-name>MP5-scan</object-name>
		<object-name>MP4-scan</object-name>
		<object-name>MP3-scan</object-name>
		<object-name>MP2-scan</object-name>
		<object-name>MP1-scan</object-name>
	</effect>

	<animation>
		<type>rotate</type>
		<object-name>tid</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>

	<animation>
