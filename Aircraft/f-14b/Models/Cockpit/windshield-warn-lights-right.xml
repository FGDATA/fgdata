<?xml version="1.0"?>

<PropertyList>

	<path>windshield-warn-lights-right.ac</path>


<!-- Warning Lights -->
	<animation>
		<type>select</type>
		<object-name>type1-lit</object-name>
		<condition>
<and>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                <value>0</value>
            </greater-than>
<or>
<property>sim/model/f-14b/lights/master-test-lights</property>-->
<and>
			<property>instrumentation/ecm/on-off</property>
			<property>instrumentation/ecm/alert-type1</property>
</and>
</or>
</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>type2-lit</object-name>
		<condition>
<and>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                <value>0</value>
            </greater-than>
<or>
<property>sim/model/f-14b/lights/master-test-lights</property>-->
<and>
			<property>instrumentation/ecm/on-off</property>
			<property>instrumentation/ecm/alert-type2</property>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                <value>0</value>
            </greater-than>
</and>
</or>
</and>
		</condition>
	</animation>


	<animation>
		<type>material</type>
		<object-name>type1-lit</object-name>
		<emission> 
			<factor-prop>sim/model/f-14b/controls/lighting/index-norm</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>type2-lit</object-name>
		<emission> 
			<factor-prop>sim/model/f-14b/controls/lighting/index-norm</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>



	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>35</max-m>
	</animation>


</PropertyList>
