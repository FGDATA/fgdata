	<!-- Frequency Digital Display, ta-ta-ta da... -->
	<animation>
		<type>textranslate</type>
		<object-name>digit-1</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.000001</factor>
		<offset>-100000</offset>
		<step>100000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-2</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.00001</factor>
		<offset>-10000</offset>
		<step>10000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-3</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.0001</factor>
		<offset>-1000</offset>
		<step>1000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-4</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-5</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-6</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<step>1</step>
		<axis><y>-1</y></axis>
	</animation>


	<animation>
		<object-name>digits</object-name>
		<type>select</type>
		<condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/mode</property>
					<value>0</value>
				</equals>
			</not>
			<or>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/function</property>
					<value>0</value>
				</equals>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/function</property>
					<value>1</value>
				</equals>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/function</property>
					<value>2</value>
				</equals>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/function</property>
					<value>4</value>
				</equals>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/mode</property>
					<value>4</value>
				</equals>
			</or>
		</condition>
	</animation>

	<!-- preset-->
	<animation>
		<object-name>digits-preset</object-name>
		<type>select</type>
		<condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/mode</property>
					<value>0</value>
				</equals>
			</not>
			<not>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/mode</property>
					<value>4</value>
				</equals>
			</not>
			<or>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/function</property>
					<value>3</value>
				</equals>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/function</property>
					<value>5</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-preset-1</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/preset</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-preset-2</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/preset</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<step>1</step>
		<axis><y>-1</y></axis>
	</animation>

	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-1-2</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_freq(10000)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_freq(-10000)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-3</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_freq(1000)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_freq(-1000)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-4</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_freq(100)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_freq(-100)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-5-6</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_freq(25)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_freq(-25)</script>
			</binding>
		</action>
	</animation>


	<!-- Function knob -->
	<animation>
		<type>rotate</type>
		<object-name>function-knob</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/function</property>
		<factor>30</factor>
		<center>
			<x-m>0.0142</x-m>
			<y-m>-0.0491</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-function</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_function(1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_function(-1)</script>
			</binding>
		</action>
	</animation>

	<!-- Channel Selector knob -->
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-channel</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_channel(1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_channel(-1)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>mode-knob</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/mode</property>
		<factor>30</factor>
		<center>
			<x-m>0.0135</x-m>
			<y-m>0.0515</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-mode</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_mode(1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_mode(-1)</script>
			</binding>
		</action>
	</animation>

	<!-- Volume knob -->
	<animation>
		<type>rotate</type>
		<object-name>vol-knob</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/volume</property>
		<factor>225</factor>
		<center>
			<x-m>-0.0142</x-m>
			<y-m>-0.0608</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<name>toto</name>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-volume</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_volume(0.1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_182v.adj_volume(-0.1)</script>
			</binding>
		</action>
	</animation>

	<!-- lighting -->
	<animation>
		<object-name>mount</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>
	<animation>
		<object-name>switches-and-knobs</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>


	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
