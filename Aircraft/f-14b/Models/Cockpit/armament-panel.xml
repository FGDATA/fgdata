<?xml version="1.0"?>

<PropertyList>

	<path>armament-panel.ac</path>

	<animation>
		<type>select</type>
		<object-name>armament-panel</object-name>
		<condition>
			<or>
				<equals>
					<property>sim/current-view/name</property>
					<value>RIO View</value>
				</equals>
				<equals>
					<property>sim/current-view/name</property>
					<value>Back-seat View</value>
				</equals>
			</or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>launch-on</object-name>
		<condition>
			<property>sim/model/f-14b/systems/armament/launch-light</property>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>sta-1-sw</object-name>
		<property>sim/model/f-14b/controls/armament/station-selector[0]</property>
		<factor>-35</factor>
		<center>
			<x-m>0.0027</x-m>
			<y-m>0.0</y-m>
			<z-m>-0.0679</z-m>
		</center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sta-1-up</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>nasal</command>
				<script>
					f14.station_selector(0, -1);
				</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sta-1-down</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>nasal</command>
				<script>
					f14.station_selector(0, 1);
				</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>sta-8-sw</object-name>
		<property>sim/model/f-14b/controls/armament/station-selector[7]</property>
		<factor>-35</factor>
		<center>
			<x-m>0.0027</x-m>
			<y-m>0.0</y-m>
			<z-m>-0.0679</z-m>
		</center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sta-8-up</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>nasal</command>
				<script>
					f14.station_selector(7, -1);
				</script>
			</binding>
		</action>
	</animation> 
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sta-8-down</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>nasal</command>
				<script>
					f14.station_selector(7, 1);
				</script>
			</binding>
		</action>
	</animation> 


	<!-- Lightning -->
	<animation>
		<object-name>mount</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>
	<animation>
		<object-name>buttons</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>
	<animation>
		<object-name>drums</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>



	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>7</max-m>
	</animation>

</PropertyList>
