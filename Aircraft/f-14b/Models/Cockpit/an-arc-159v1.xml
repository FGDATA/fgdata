<?xml version="1.0"?>


<PropertyList>
	<path>an-arc-159v1.ac</path>

	<animation>
		<type>select</type>
		<object-name>an-arc-159v1</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
		</condition>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>digit-6</object-name>
		<object-name>digit-5</object-name>
		<object-name>digit-4</object-name>
		<object-name>digit-3</object-name>
		<object-name>digit-2</object-name>
		<object-name>digit-1</object-name>
		<object-name>dot</object-name>
	</effect>

	<!-- Frequency Digital Display, ta-ta-ta da... -->
	<animation>
		<type>textranslate</type>
		<object-name>digit-1</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/frequencies/selected-mhz</property>
		<factor>0.000001</factor>
		<offset>-100000</offset>
		<step>100000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-2</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/frequencies/selected-mhz</property>
		<factor>0.00001</factor>
		<offset>-10000</offset>
		<step>10000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-3</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/frequencies/selected-mhz</property>
		<factor>0.0001</factor>
		<offset>-1000</offset>
		<step>1000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-4</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/frequencies/selected-mhz</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-5</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/frequencies/selected-mhz</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-6</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/frequencies/selected-mhz</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<step>1</step>
		<axis><y>-1</y></axis>
	</animation>

	<animation>
		<object-name>digits</object-name>
		<type>select</type>
		<condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
				<or>
					<equals>
						<property>sim/model/f-14b/instrumentation/an-arc-159v1/mode</property>
						<value>0</value>
					</equals>
					<equals>
						<property>sim/model/f-14b/instrumentation/an-arc-159v1/mode</property>
						<value>3</value>
					</equals>
				</or>
			</not>
			<equals>
				<property>sim/model/f-14b/instrumentation/an-arc-159v1/read</property>
				<value>true</value>
			</equals>
		</condition>
	</animation>

	<!-- preset-->
	<animation>
		<object-name>digits-preset</object-name>
		<type>select</type>
		<condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
				<or>
					<equals>
						<property>sim/model/f-14b/instrumentation/an-arc-159v1/mode</property>
						<value>0</value>
					</equals>
					<equals>
						<property>sim/model/f-14b/instrumentation/an-arc-159v1/mode</property>
						<value>3</value>
					</equals>
				</or>
			</not>
			<equals>
				<property>sim/model/f-14b/instrumentation/an-arc-159v1/read</property>
				<value>false</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-preset-1</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/preset</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-preset-2</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/preset</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<step>1</step>
		<axis><y>-1</y></axis>
	</animation>

	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-1-2</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_freq(10000)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_freq(-10000)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-3</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_freq(1000)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_freq(-1000)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-4</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_freq(100)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_freq(-100)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-5-6</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_freq(25)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_freq(-25)</script>
			</binding>
		</action>
	</animation>


	<!-- Mode -->
	<animation>
		<type>rotate</type>
		<object-name>mode-knob</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/mode</property>
		<factor>32</factor>
		<center>
			<x-m>0.0205</x-m>
			<y-m>0.0518</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-mode</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_mode(1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_mode(-1)</script>
			</binding>
		</action>
	</animation>

	<!-- Channel Selector knob -->
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-channel</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_channel(1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_channel(-1)</script>
			</binding>
		</action>
	</animation>

	<!-- Function knob -->
	<animation>
		<type>rotate</type>
		<object-name>function-knob</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/function</property>
		<factor>45</factor>
		<center>
			<x-m>0.0205</x-m>
			<y-m>-0.0524</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-function</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_function(1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.adj_function(-1)</script>
			</binding>
		</action>
	</animation>

	<!-- Read switch -->
	<animation>
		<type>rotate</type>
		<object-name>read-switch</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/read</property>
		<factor>50</factor>
		<center>
			<x-m>-0.0450</x-m>
			<y-m>0.0000</y-m>
			<z-m>0.0065</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-read</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>sim/model/f-14b/instrumentation/an-arc-159v1/read</property>
			</binding>
		</action>

	</animation>

	<!-- Volume knob -->
	<animation>
		<type>rotate</type>
		<object-name>vol-knob</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-159v1/volume</property>
		<factor>225</factor>
		<center>
			<x-m>-0.0299</x-m>
			<y-m>-0.0611</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-vol</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.set_volume(0.1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.set_volume(-0.1)</script>
			</binding>
		</action>
	</animation>

	<!-- Load button -->
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-load</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>an_arc_159v1.load_freq()</script>
			</binding>
		</action>
	</animation>


	<!-- lighting -->
	<animation>
		<object-name>mount</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>
	<animation>
		<object-name>switches-and-knobs</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>


	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
