<?xml version="1.0"?>

<PropertyList>

	<path>sweep-indicator.ac</path>

	<animation>
		<type>select</type>
		<object-name>sweep-indicator</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
		</condition>
	</animation>

<!-- left; actual position -->
	<animation>
		<type>translate</type>
		<object-name>index-actual-pos</object-name>
		<property>surface-positions/wing-pos-norm</property>
		<interpolation>
			<entry><ind>0.2941176470588235</ind><dep>0</dep></entry>
			<entry><ind>1</ind><dep>0.0527</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>

<!-- middle; commanded position -->
	<animation>
		<type>translate</type>
		<object-name>index-commanded-pos</object-name>
		<property>controls/flight/wing-sweep</property>
		<interpolation>
			<entry><ind>0.2941176470588235</ind><dep>0</dep></entry>
			<entry><ind>1</ind><dep>0.0527</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>

<!-- right; cadc auto position -->
	<animation>
		<type>textranslate</type>
		<object-name>program-tape</object-name>
		<property>controls/flight/wing-sweep-cadc-dmd</property>
		<interpolation>
			<entry><ind>0.2941176470588235</ind><dep>0</dep></entry>
			<entry><ind>1</ind><dep>0.490</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>off</object-name>
		<condition>
			<property>sim/model/f-14b/systems/wing-sweep/mode/off</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>auto</object-name>
		<condition>
			<property>sim/model/f-14b/systems/wing-sweep/mode/auto</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>man</object-name>
		<condition>
			<property>sim/model/f-14b/systems/wing-sweep/mode/man</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>emer</object-name>
		<condition>
			<property>sim/model/f-14b/systems/wing-sweep/mode/emer</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>over</object-name>
		<condition>
			<property>sim/model/f-14b/systems/wing-sweep/mode/over</property>
		</condition>
	</animation>

<!-- actions -->
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>instrument</object-name>
		<action>
			<button>3</button>
              <repeatable type="bool">true</repeatable>
              <binding>
                  <command>nasal</command>
                  <script>f14.move_wing_sweep(-1)</script>
              </binding>
		</action>
		<action>
			<button>4</button>
              <repeatable type="bool">true</repeatable>
              <binding>
                  <command>nasal</command>
                  <script>f14.move_wing_sweep(1)</script>
              </binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>button-off</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>f14.set_sweep(2)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>button-auto</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>f14.set_sweep(0)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>button-man</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>f14.set_sweep(1)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>button-emer</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>f14.set_sweep(3)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>button-over</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>f14.set_sweep(4)</script>
			</binding>
		</action>
	</animation>

	<!--lighting -->
	<animation>
		<object-name>mount</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>

	<animation>
		<object-name>instrument</object-name> 
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission> 
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>



	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>35</max-m>
	</animation>

</PropertyList>
