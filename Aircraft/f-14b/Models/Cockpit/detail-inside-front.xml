<PropertyList>

	<!-- DÃ©tailled Cockpit Consoles and Panels -->
	<name>Detail-Inside-Front</name>
	<path>detail-inside-front.ac</path>

	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>fire-handle-l</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>f14.fire_handle(0)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>fire-handle-l</object-name>
		<property>controls/engines/engine[0]/cutoff</property>
		<factor>0.05</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>fire-handle-r</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>f14.fire_handle(1)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>fire-handle-r</object-name>
		<property>controls/engines/engine[1]/cutoff</property>
		<factor>0.05</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>inside-front</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>L-pedal</object-name>
		<property>controls/flight/rudder</property>
		<factor>0.07</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>R-pedal</object-name>
		<property>controls/flight/rudder</property>
		<factor>0.07</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

