                            <value>45</value>
                        </greater-than>
                        <less-than>
                            <property>orientation/pitch-deg</property>
                            <value>-45</value>
                        </less-than>
                        <greater-than>
                            <property>orientation/pitch-deg</property>
                            <value>45</value>
                        </greater-than>
                        <greater-than>
                            <property>position/altitude-agl-ft</property>
