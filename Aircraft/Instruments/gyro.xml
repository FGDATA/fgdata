    <y1>0.515625</y1>
    <x2>0.484375</x2>
    <y2>1.0</y2>
   </texture>
   <w>110</w>
   <h>110</h>
   <transformations>
    <transformation>
     <type>rotation</type>
     <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
     <scale>-1.0</scale>
    </transformation>
   </transformations>
  </layer>
