    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>50</offset>
    </transformation>
   </transformations>
  </layer>
  <!-- style A -->
  <layer>
   <name>fixed center</name>
   <condition>
    <equals>
    <property alias="../../../../../params/dg-style"/>
