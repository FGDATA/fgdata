        <action>
            <name>Alt decrease</name>
            <button>0</button>
            <x>67</x>
            <y>-110</y>
            <w>8</w>
            <h>14</h>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-altitude-ft</property>
                <step>-100</step>
                <min>0</min>
                <max>99999</max>
                <wrap>0</wrap>
            </binding>
        </action>

        <action>
            <name>Alt increase</name>
            <button>0</button>
