        <layer>
            <name>VSI</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>10</point-size>
            <color>
                <red>0.1</red>
                <green>0.9</green>
                <blue>0.3</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>velocities/vertical-speed-fps</property>
