        </layer>

        <layer>
            <name>CRS label</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>10</point-size>
            <color>
                <red>0.8</red>
                <green>0.8</green>
                <blue>0.8</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/primus1000/course-string</property>
                </chunk>
               </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-180</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-70</offset>
                </transformation>
            </transformations>
