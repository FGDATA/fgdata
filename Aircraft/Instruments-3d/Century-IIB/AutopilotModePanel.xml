<PropertyList>
    <name>AutopilotModePanel</name>
    <background>Aircraft/Instruments-3d/Century-IIB/transparent.rgb</background>
    <w>59</w>
    <h>58</h>
    <instruments>
        <instrument>
            <name>panel hotspots</name>
            <x>29</x>
            <y>29</y>
            <w>58</w>
            <h>59</h>
            <w-base>58</w-base>
            <h-base>58</h-base>

            <actions>
                <!--  decrease -->
                <action>
                    <name>AP mode decrease</name>
                    <button>0</button>
                    <x>-29</x>
                    <y>-29</y>
                    <w>29</w>
                    <h>58</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/autopilot/CENTURYIIB/controls/mode</property>
                        <step>-1</step>
                        <min>0</min>
                        <max>4</max>
                    </binding>
                    <binding>
                        <command>nasal</command>
                        <script>CenturyIIB.apModeControlsChange()</script>
                    </binding>
                </action>

                <!--  increase -->
                <action>
                    <name>AP mode increase</name>
                    <button>0</button>
                    <x>0</x>
                    <y>-29</y>
                    <w>29</w>
                    <h>58</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/autopilot/CENTURYIIB/controls/mode</property>
                        <step>1</step>
                        <min>0</min>
                        <max>4</max>
                    </binding>
                    <binding>
                        <command>nasal</command>
                        <script>CenturyIIB.apModeControlsChange()</script>
                    </binding>
                </action>

            </actions>
        </instrument>
    </instruments>
</PropertyList>
