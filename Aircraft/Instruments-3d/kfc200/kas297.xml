            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/kfc200/alt-preset</property>
                <step>-1000</step>
                <min>0.0</min>
                <max>99999.0</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>pick</type>
        <object-name>Alt.increase</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/kfc200/alt-preset</property>
                <step>100</step>
                <min>0.0</min>
                <max>99999.0</max>
