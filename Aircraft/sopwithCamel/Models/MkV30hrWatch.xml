<?xml version="1.0"?>
  <PropertyList> 
    <path>MkV30hrWatch.ac</path>
    <texture-path>Textures</texture-path>
    <animation> 
      <type>rotate</type>
      <object-name>hour_hand</object-name>
      <property>/instrumentation/clock/indicated-sec</property>
      <factor>0.00833333333333333</factor>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>
    <animation> 
      <type>rotate</type>
      <object-name>minute_hand</object-name>
      <property>/instrumentation/clock/indicated-sec</property>
      <factor>0.1</factor>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>
    <animation> 
      <type>rotate</type>
      <object-name>second_hand</object-name>
      <property>/instrumentation/clock/indicated-sec</property>
      <factor>6</factor>
      <center> 
        <x-m>0.00725262</x-m>
        <y-m>0</y-m>
        <z-m>-0.0105507</z-m>
      </center>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

	<animation> 
		<type>select</type>
		<object-name>screws</object-name>
		<object-name>knob</object-name>
		<condition>
			<property>sim/model/camel/extra-details</property>
		</condition>
	</animation> 

	<!-- *** LoD *** -->
    <!--<animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>-->
  </PropertyList>
