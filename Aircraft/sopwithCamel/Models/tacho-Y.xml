<?xml version="1.0"?>
<PropertyList> 

	<path>tacho.ac</path>
	<texture-path>Textures</texture-path>

	<animation> 
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>/engines/engine/rpm</property>
		<interpolation>
			<entry><ind>0</ind><dep>-180</dep></entry>
			<entry><ind>2500</ind><dep>180</dep></entry>
		</interpolation>
		<axis> 
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center> 
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
		
	<animation> 
		<type>select</type>
		<condition>
			<property>sim/model/camel/extra-details</property>
		</condition>
	</animation> 

	<!-- *** LoD *** -->
