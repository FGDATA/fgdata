<?xml version="1.0"?>

<!-- Elliot Clinometer -->
<PropertyList> 
	<path>elliot_clinometer.ac</path>
	<texture-path>Textures</texture-path>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>tube</object-name>
  </effect>

  <animation>
		<type>rotate</type>
		<object-name>ball</object-name>
		<property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
		<interpolation>
			<entry>
				<ind>-1</ind>
				<dep>-7.5</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>7.5</dep>
			</entry>
		</interpolation>
		<axis> 
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center> 
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>-0.361787</z-m>
		</center>
	</animation>

	<animation> 
		<type>select</type>
		<object-name>tube</object-name>
		<object-name>brass_backing</object-name>
		<object-name>screws</object-name>
		<condition>
			<property>sim/model/camel/extra-details</property>
		</condition>
	</animation> 


  <!-- *** LoD *** -->
    <!--<animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>-->
</PropertyList>
