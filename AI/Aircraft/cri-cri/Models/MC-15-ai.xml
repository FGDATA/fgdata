      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <condition>
		  <less-than>
			<property>velocities/true-airspeed-kt</property>
			<value>71</value>
		  </less-than>
		</condition>
    <factor> 30 </factor>
    <center>
      <x-m> -0.169 </x-m>
      <y-m>  0.540 </y-m>
      <z-m> -0.500 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

