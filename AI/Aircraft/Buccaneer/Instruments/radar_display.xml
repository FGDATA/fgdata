		<layer>
			<name>outer range ring</name>
			<type>text</type>
			<font>helvetica_bold</font>
			<point-size>10</point-size>
			<color>
				<red>0.75</red>
				<green>0.5</green>
				<blue>0.25</blue>
			</color>
			<emissive>true</emissive>
			<chunks>
				<chunk>
					<type>number-value</type>
					<property>/instrumentation/air-ground-radar/range</property>
					<scale>1</scale>
					<format>%2.1f</format>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>-10</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>110</offset>
				</transformation>
			</transformations>
		</layer>

		<layer>
			<name>inner range ring</name>
			<type>text</type>
			<font>helvetica_bold</font>
			<point-size>10</point-size>
			<color>
				<red>0.75</red>
				<green>0.5</green>
				<blue>0.25</blue>
			</color>
			<emissive>true</emissive>
			<chunks>
				<chunk>
					<type>number-value</type>
					<property>/instrumentation/air-ground-radar/range</property>
					<scale>0.5</scale>
					<format>%2.1f</format>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>-10</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>-5</offset>
				</transformation>
			</transformations>
		</layer>

		<layer>
			<name>frame</name>
			<w>256</w>
			<h>256</h>
			<texture>
				<path>../../../../Aircraft/Instruments/Textures/mask.rgb</path>
				<x1>0</x1>
