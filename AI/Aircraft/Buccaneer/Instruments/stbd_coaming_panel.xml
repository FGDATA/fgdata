			</binding>
			<binding>
				<command>property-assign</command>
				<property>/sim/model/buccaneer/controls/autopilot-selector</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>/controls/flight/elevator-auto</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>/controls/flight/elevator-auto</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>/controls/autoflight/autopilot/engage</property>
				<value>0</value>
			</binding>
		</action>
