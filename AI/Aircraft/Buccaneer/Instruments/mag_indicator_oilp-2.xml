	<!-- Panel Lighting -->
	<animation>
		<type>material</type>
		<object-name>panel-lighting-group</object-name>
		<emission>
			<factor-prop>/systems/electrical/outputs/panel-floodlighting</factor-prop>
			<red>0.03125</red>
			<green>0.0089</green>
			<blue>0.0089</blue>
		</emission>
	</animation>

