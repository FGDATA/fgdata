    <offsets>
      <x-m> 10.290 </x-m>
      <y-m> 14.550 </y-m>
      <z-m> -1.928 </z-m> 
      <pitch-deg> -160 </pitch-deg>
    </offsets>
    <condition>
      <property>controls/switches/reserve2</property>
    </condition>
  </model>

  <!-- Refueling pods -->
  <model>
    <path>AI/Aircraft/A330-MRTT/Models/refueling/probe.xml</path>
  </model>
   
  <multiplay>
    <refuel>
      <type>probe</type>
    </refuel>
    <tanker>true</tanker>
  </multiplay>
   
</PropertyList>
