      <y-m>  0.000 </y-m>
      <z-m> -2.500 </z-m>      
    </offsets>
  </model>

  <!-- Takeoff Engine Moisture -->
  <model>
    <name>Left</name>
    <path>AI/Aircraft/A330-MRTT/Models/effects/exhaust.xml</path>
      <condition>
        <and>
          <greater-than>
            <property>position/altitude-agl-ft</property>
            <value>1</value>
          </greater-than>
          <and>
            <greater-than>
              <property>environment/relative-humidity</property>
              <value>45</value>
            </greater-than>
            <and>
              <less-than-equals>
                <property>position/altitude-agl-ft</property>
                <value>75</value>
              </less-than-equals>
              <and>
                <less-than-equals>
                  <property>/sim/time/sun-angle-rad</property>
                  <value>1.63</value>
                </less-than-equals>
                <and>
                  <greater-than>
                    <property>engines/engine[0]/rpm</property>
                    <value>90</value>
                  </greater-than>
                  <not>
                    <property>sim/crashed</property>
                  </not>
                </and>
              </and>
            </and>
          </and>
        </and>
      </condition>
    <offsets>
      <x-m> -10.00 </x-m>
      <y-m>  -8.27 </y-m>
      <z-m>  -2.40 </z-m>
    </offsets>
  </model>

  <model>
    <name>Right</name>
    <path>AI/Aircraft/A330-MRTT/Models/effects/exhaust.xml</path>
    <condition>
      <and>
        <greater-than>
          <property>position/altitude-agl-ft</property>
          <value>1</value>
        </greater-than>
        <and>
          <greater-than>
            <property>environment/relative-humidity</property>
            <value>45</value>
          </greater-than>
          <and>
            <less-than-equals>
              <property>position/altitude-agl-ft</property>
              <value>75</value>
            </less-than-equals>
            <and>
              <less-than-equals>
                <property>/sim/time/sun-angle-rad</property>
                <value>1.63</value>
              </less-than-equals>
              <and>
                <greater-than>
                  <property>engines/engine[1]/rpm</property>
                  <value>90</value>
                </greater-than>
                <not>
                  <property>sim/crashed</property>
                </not>
              </and>
            </and>
          </and>
        </and>
      </and>
    </condition>
    <offsets>
      <x-m> -10.00 </x-m>
      <y-m>   8.27 </y-m>
      <z-m>  -2.40 </z-m>
    </offsets>
  </model>

  <!-- Particules OSG -->
  <model>
    <path>AI/Aircraft/A330-MRTT/Models/effects/fueldump.xml</path>
    <offsets>
      <x-m>  10.290 </x-m>
      <y-m> -14.550 </y-m>
      <z-m>  -2.928 </z-m> 
      <pitch-deg> -160 </pitch-deg>
    </offsets>
