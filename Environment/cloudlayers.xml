      <min-middle-lighting-factor>0.3</min-middle-lighting-factor>
      <min-shade-lighting-factor>0.4</min-shade-lighting-factor>
      <min-sprite-width-m>1300</min-sprite-width-m>
      <min-sprite-height-m>600</min-sprite-height-m>
