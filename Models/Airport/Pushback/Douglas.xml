   </animation>
    <!-- compensate for pitch of aircraft, keep pushback level -->
   <animation>
     <type>rotate</type>
     <property>orientation/pitch-deg</property>
     <factor>-1</factor>
     <center>
       <x-m>0</x-m>
       <y-m>0</y-m>
       <z-m>0</z-m>
     </center>
     <axis>
       <x>0</x>
       <y>1</y>
       <z>0</z>
     </axis>
   </animation>
  </PropertyList>
