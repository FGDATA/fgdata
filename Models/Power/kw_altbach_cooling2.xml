  <texture>kw_altbach_cooling2_smoke.png</texture>
  <emissive>false</emissive>
  <lighting>true</lighting>
       
  <offsets>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>24</z-m>
  </offsets>
           
  <attach>local</attach>
           
  <placer>
    <type>point</type>
  </placer>
           
  <shooter>
    <speed-mps>
    	<value>5</value>
	<spread>3</spread>
