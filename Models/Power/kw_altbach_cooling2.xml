  <particle>

  <start>
    <color>
      <red><value>1</value></red>
      <green><value>1</value></green>
      <blue><value>1</value></blue>
      <alpha><value>0.2</value></alpha>
    </color>
    <size>
      <value>30</value>
    </size>
