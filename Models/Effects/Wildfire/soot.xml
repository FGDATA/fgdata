<PropertyList>

 <path>soot.ac</path>

 <animation>
  <type>select</type>
  <condition>
   <property>/environment/wildfire/models/enabled</property>
  </condition>
 </animation>

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5000</max-m>
 </animation>

 <animation>
  <enable-hot type="bool">false</enable-hot>
 </animation>
 <animation>
  <type>noshadow</type>
 </animation>

</PropertyList>
