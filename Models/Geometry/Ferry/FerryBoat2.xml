	<path>FerryBoat1.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>radar-antenna</object-name>
		<property>/sim/time/elapsed-sec</property>
		<factor>50</factor>
		<center>
			<x-m>-57.2526</x-m>
			<y-m>0</y-m>
			<z-m>23.3218</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<animation>
		<type>blend</type>
		<object-name>Wake</object-name>
		<property>velocities/true-airspeed-kt</property>
		<factor>-0.2</factor>
		<offset>1</offset>
		<min>0.1</min>
		<max>1</max>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Wake</object-name>
		<property>orientation/roll-deg</property>
		<factor>1</factor>
