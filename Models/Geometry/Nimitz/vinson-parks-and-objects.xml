<?xml version="1.0"?>

<PropertyList>
	<description>USS Vinson - CVN-70</description>
	<path>vinson-parks-and-objects.ac</path>


	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>glass</object-name>
	</effect>

